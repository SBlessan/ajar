


{% comment %}
  collections-template.liquid
  This is an example of a collection section template.
{% endcomment %}

<section class="collection-section">
  <h2 class="section-title">{{ section.settings.title }}</h2>
  
  <div class="collection-grid">
    {% for collection in collections[section.settings.collection_to_display] %}
      <div class="collection-item">
        <a href="{{ collection.url }}">
          <img src="{{ collection.featured_image | img_url: 'medium' }}" alt="{{ collection.title }}">
          <h3>{{ collection.title }}</h3>
        </a>
      </div>
    {% endfor %}
  </div>
</section>


{% schema %}

  {
  "name": "Collection Section",
  "settings": [
    {
      "type": "text",
      "label": "Section Title",
      "id": "title",
      "default": "Featured Collections"
    },
    {
      "type": "collection",
      "label": "Collection to Display",
      "id": "collection_to_display"
    }
  ]
}

{% endschema %}