<div class="outer_container">
  <h1>{{ section.settings.heading }}</h1>
  <h3>What our clients had to say</h3>
  
  <div class="block_container">
    {% for block in section.blocks %}
      <div class="block_content">
         <img src="{{ block.settings.block_image | img_url:'large'}}" />
         <h2>Hiiii {{ block.settings.blocktext }}</h2>
      </div>
     
    {% endfor %}
  </div>
  
</div>

{% schema %}
  {
    "name": "Try",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Main Heading",
        "default":"Try heading"
      }
    ],
    "blocks":[
      {
        "type":"image",
        "name":"Custom block",
        "settings":[
          {
            "type":"image_picker",
            "id":"block_image",
            "label":"Enter item image"
          },
          {
            "type":"text",
            "id":"blocktext",
            "label":"Item description",
            "default":"Enter Item Description"
          }
        ]
      }
    ],
    "presets":[{
      "category":"Image",
      "name":"Try section"
    }]
  }
{% endschema %}