{% for collection in collections[section.settings.collection_to_display.handle].products %}
  <div id="PopupModal-{{ block.id }}" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>{{ collection.title }}</h2>
      {{ block.settings.page.content }}
      <img src="{{ collection.settings.image | img_url: 'master' }}" alt="Image">
    </div>
  </div>
{% endfor %}




{% schema %}
   {
  "name": "Collection Section",
  "settings": [
    {
      "type": "text",
      "label": "Section Title",
      "id": "title",
      "default": "Enter The Title"
    },
     {
      "type": "image_picker",
      "label": "Enter image",
      "id": "image"
      
    },
    {
      "type": "collection",
      "label": "Collection to Display",
      "id": "collection_to_display"
    }
  ], "presets":[{
      "category":"One section",
      "name":"One section"
    }]
}
{% endschema %}

